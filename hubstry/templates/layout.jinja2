{% extends "base.jinja2" %}

{% block css %}
  <link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
	integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
	crossorigin="anonymous" />

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/main.css">
{% endblock css %}
{% block scripts %}
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous">
  </script>
{% endblock scripts %}

{% block body %}
  <div class="body">
    <div class="jumbotron text-center" style="padding: 10px 0 0 0">
      <h3>Hubstry - Docker Registry Front-End</h3>
      <div class="container">
	<br>
      </div>
      {% block top %}
	<form class="form-inline">
	  <div class="form-group">
	    <label for="search">Find Image</label>
	    <input class="form-control" type="text" placeholder="Put image name for search" id="search" name="search"/>
	  </div>
	  <button class="btn btn-primary">Search</button>
	</form>
      {% endblock top %}
    </div>
    <div class="container">
      {% block content %}
	<!-- Content -->
      {% endblock content %}
    </div>
    {% block footer %}
      <nav class="navbar navbar-default navbar-fixed-bottom text-center">
	<ul>
	  <li>About</li>
	  <li>Back to the top</li>
	</ul>
      </nav>
    {% endblock footer %}
  </div>
{% endblock body %}
